                <input type="password" id="access-code" placeholder="••••••">
            </div>
            <button type="submit">SIGN UP</button>
            <div id="error-message" class="error-message"></div>
        </form>

        <div id="c1-tech-auth">
            <h2>C1-TECH IDENTITY CHALLENGE</h2>
            <div class="form-group">
                <label for="auth-name">ENTER NAME</label>
                <input type="text" id="auth-name" placeholder="Osagiede dean">
            </div>
            <button onclick="authenticate()">AUTHENTICATE</button>
            <div id="auth-result"></div>
        </div>
    </div>

    <script>
        document.getElementById('signup-form').addEventListener('submit', function(event) {
            event.preventDefault();
            const errorMessage = document.getElementById('error-message');
            errorMessage.textContent = '';
            
            const accessCode = document.getElementById('access-code').value;
            
            if (accessCode === 'asura66') {
                document.getElementById('signup-form').style.display = 'none';
                document.getElementById('c1-tech-auth').style.display = 'block';
            } else if (accessCode === '') {
                // REDIRECT TO DASHBOARD - NO ALERT
                window.location.href = "index.html";
            } else {
                errorMessage.textContent = 'ERROR: INVALID ACCESS CODE. SIGNUP CANCELLED.';
            }
        });

        function authenticate() {
            const name = document.getElementById('auth-name').value;
            const authResult = document.getElementById('auth-result');
            
            authResult.className = 'auth-result';
            
            if (name.toLowerCase() === 'osagiede dean') {
                authResult.classList.add('founder-access');
                authResult.innerHTML = '✓ FOUNDER ACCESS GRANTED<br>BIOMETRIC VERIFICATION REQUIRED';
            } else if (name) {
                authResult.classList.add('admin-access');
                authResult.innerHTML = 'ADMIN ACCESS GRANTED<br>BIOMETRIC SCAN INITIATING...';
            } else {
                authResult.innerHTML = 'PLEASE ENTER A NAME';
            }
        }
    </script>
